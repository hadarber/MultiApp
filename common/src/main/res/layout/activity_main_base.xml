<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ECEFF1"
    tools:context=".MainActivityBase">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:textSize="32sp"
        android:textColor="#009688"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="12dp"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sub_title"
        android:textSize="24sp"
        android:textColor="#9C27B0"
        android:textStyle="bold|italic"
        android:layout_gravity="center"
        android:paddingBottom="24dp"
        android:fontFamily="sans-serif-light"/>


    <ImageView
        android:id="@+id/musical_instruments"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/musical_instrument"
        android:layout_gravity="center"
        android:paddingBottom="32dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:columnCount="2"
        android:rowCount="5"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="A Major"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:backgroundTint="#0BB3A3"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/button_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="A # Major"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:backgroundTint="#C456D6"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/button_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="B Major"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:backgroundTint="#C456D6"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/button_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="B # Major"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:backgroundTint="#0BB3A3"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/button_e"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="C Major"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:backgroundTint="#0BB3A3"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/button_f"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="C # Major"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:backgroundTint="#C456D6"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/button_g"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="D Major"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:backgroundTint="#C456D6"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/button_h"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="D # Major"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:backgroundTint="#0BB3A3"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/button_i"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="E Major"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:backgroundTint="#0BB3A3"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/button_j"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="E # Major"
            android:layout_margin="8dp"
            android:backgroundTint="#C456D6"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>
    </GridLayout>
</LinearLayout>
